{
  "name": "@3cx-ninja/agent",
  "version": "1.0.0",
  "private": true,
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:react\"",
    "dev:electron": "nodemon --watch src/main --exec electron src/main/index.ts",
    "dev:react": "vite",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "package": "electron-builder",
    "start": "electron ."
  },
  "dependencies": {
    "@3cx-ninja/shared": "file:../shared",
    "socket.io-client": "^4.7.2",
    "axios": "^1.6.2",
    "node-record-lpcm16": "^1.0.1",
    "naudiodon": "^2.3.6",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "framer-motion": "^10.17.9",
    "react-hot-toast": "^2.4.1",
    "recharts": "^2.10.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/node": "^20.10.5",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.10",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "build": {
    "appId": "com.3cx-ninja.agent",
    "productName": "3CX Ninja Agent",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "dist-react/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}