{
  "name": "3cx-ninja-realtime",
  "version": "2.0.0",
  "description": "Système temps réel 3CX-NinjaOne avec transcription locale",
  "private": true,
  "workspaces": [
    "server",
    "agent",
    "dashboard",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:whisper",
    "install:whisper": "cd server && npm run setup:whisper",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:agent\" \"npm run dev:dashboard\"",
    "dev:server": "npm --workspace=server run dev",
    "dev:agent": "npm --workspace=agent run dev",
    "dev:dashboard": "npm --workspace=dashboard run dev",
    "build": "npm run build:shared && npm run build:server && npm run build:agent && npm run build:dashboard",
    "build:shared": "npm --workspace=shared run build",
    "build:server": "npm --workspace=server run build",
    "build:agent": "npm --workspace=agent run build",
    "build:dashboard": "npm --workspace=dashboard run build",
    "start": "npm --workspace=server run start",
    "deploy:local": "npm run build && npm run start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.10.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}